model Suppliers {
    id Int @id @default(autoincrement())
    firstName String
    lastName String
    email String @unique
    phone Int
    password String
    latitude Float
    longitude Float
    inventories Inventory[]
  }

model Customers {
    id Int @id @default(autoincrement())
    firstName String
    lastName String
    email String @unique
    phone Int
    latitude Float
    longitude Float
    password String
  }

model Parts {
    id Int @id @default(autoincrement())
    Name String
    Description String
    subparts SubParts[]
  }

model SubParts {
    id Int @id @default(autoincrement())
    Name String
    partsId Int
    parts Parts @relation(fields: [partsId], references: [id])
    inventories Inventory[]
  }

model Inventory {
    id Int @id @default(autoincrement())
    supplierId Int
    suppliers Suppliers @relation(fields: [supplierId], references : [id])
    subpartsId Int
    subParts SubParts @relation(fields : [subpartsId], references : [id])
    quantity Int
    price Int
    @@unique([supplierId, subpartsId])
}

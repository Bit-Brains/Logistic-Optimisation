require('dotenv').config()

generator client {
  provider = "prisma-client-js"
}

const db_url = process.env.DATABASE_URL;

datasource db {
  provider = "postgresql"
  url      = db_url
}

model Suppliers {
    id Int @id @default(autoincrement())
    firstName String
    lastName String
    email String @unique
    phone Int
    password String
  }

model Customers {
    id Int @id @default(autoincrement())
    firstName String
    lastName String
    email String @unique
    phone Int
    password String
  }

